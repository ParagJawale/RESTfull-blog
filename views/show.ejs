<% include ./partials/header%>
    <div class="ui main text container segment">
        <div class="ui huge header">
            <%=blog.title%>
        </div>
       
       <div class="ui top attached segment">
           <div class="item">
               <img class="ui image fluid" src="<%=blog.image%>">
            <div class="content">
                <span><%=blog.created.toDateString()%></span>    
            </div>
            <div class="description">
                 <p><%-blog.body%></p> 
            </div>    
           </div>
       </div>
       
       <a class="ui orange button inverted" href="/blogs/<%=blog.id%>/edit">Edit</a>
       <form id="delete" action="/blogs/<%=blog.id%>?_method=DELETE" method= "POST">
           <button class="ui red button inverted">Delete</button>
       </form>
    </div>


<% include ./partials/footer %>
